{
  "name": "jubileeverse",
  "version": "8.0.0",
  "description": "Faith-based AI chat platform with persona-aware conversational experiences",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e --runInBand",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "db:migrate": "node scripts/migrate.js migrate",
    "db:seed": "node scripts/migrate.js seed",
    "db:setup": "node scripts/migrate.js all",
    "db:reset": "node scripts/migrate.js reset"
  },
  "keywords": [
    "faith",
    "ai",
    "chat",
    "bible",
    "translation",
    "personas"
  ],
  "author": "JubileeVerse Team",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@qdrant/js-client-rest": "^1.7.0",
    "bullmq": "^5.1.0",
    "compression": "^1.7.4",
    "connect-pg-simple": "^10.0.0",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.1",
    "morgan": "^1.10.0",
    "on-finished": "^2.4.1",
    "openai": "^6.15.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
